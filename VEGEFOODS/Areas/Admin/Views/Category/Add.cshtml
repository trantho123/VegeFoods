@model VEGEFOODS.Models.category
@{
    ViewBag.Title = "Thêm mới danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section HeaderMenu{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/product" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/user" class="nav-link">Người dùng</a>
        </li>
    </ul>
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới danh mục</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <div class="card">
        <div class="card card-primary" style="margin-bottom: 0px;">
            <div class="card-header" style="background-color:#82ae46;">
                <h3 class="card-title">Thêm mới danh mục</h3>
            </div>
            @using (Html.BeginForm("Add", "Category", FormMethod.Post, new { }))
            {
                <div class="card-body">
                    <div class="form-group">
                        <label for="categoryInput">Tên danh mục</label>
                        @*<input type="text" class="form-control" id="categoryInput" placeholder="Enter category name">*@
                        @Html.TextBoxFor(x => x.category_name, new { @class = "form-control", @placeholder = "Nhập tên danh mục" })
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" style="background-color:#82ae46;">Thêm</button>
                    <a href="/admin/category/index" class="btn btn-primary" style="background-color:#82ae46;">Quay lại</a>
                </div>
            }
        </div>
    </div>

</section>
<!-- /.content -->
