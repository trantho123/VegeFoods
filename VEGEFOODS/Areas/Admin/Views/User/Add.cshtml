@model VEGEFOODS.Models.user
@{
    ViewBag.Title = "Thêm mới người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section HeaderMenu{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/product" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/user" class="nav-link">Người dùng</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới người dùng</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">

    <div class="card">
        <div class="card card-primary" style="margin-bottom: 0px;">
            <div class="card-header" style="background-color:#82ae46;">
                <h3 class="card-title">Thêm mới sản phẩm</h3>
            </div>
            @using (Html.BeginForm("Add", "User", FormMethod.Post, new { }))
            {
                @Html.HiddenFor(x => x.id)
                <div class="card-body">
                    <div class="form-group">
                        <label>Tên người dùng</label>
                        @Html.TextBoxFor(x => x.name, new { @class = "form-control", @placeholder = "Tên người dùng" })
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(x => x.email, new { @class = "form-control", @placeholder = "Email" })
                    </div>

                    <div class="form-group">
                        <label>Mật khẩu</label>
                        @Html.TextBoxFor(x => x.password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                    </div>

                    <div class="form-group">
                        <label>Vai trò</label>
                        @Html.DropDownListFor(x => x.role_id, ViewBag.Role as SelectList, new { @class = "form-control" })
                    </div>

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" style="background-color:#82ae46;">Thêm mới</button>
                    <a href="/admin/user/index" class="btn btn-primary" style="background-color:#82ae46;">Quay lại</a>
                </div>
            }
        </div>
    </div>

</section>
